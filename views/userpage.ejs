<html>
	<head>
		<!-- Milligram Imports -->
		<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,300italic,700,700italic">

		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.css">

		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/milligram/1.3.0/milligram.min.css">

		<link rel="stylesheet" href="/stylesheets/loading.css">

		<script
		  src="https://code.jquery.com/jquery-3.4.1.min.js"
		  integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo="
		  crossorigin="anonymous"></script>

		<style>
			#main{
				padding: 40px;
				background-color:#f9f9f9;
				width:60%;
				text-align: center;
				font-style:Helvetica;
				border-radius: 8px; 
				position: absolute;
				top: 50%;
				left: 50%;
				transform: translate(-50%, -50%);
				box-shadow: 0 2px 8px 0px grey;
			}
			h1{
				font-size:24px;
			}
		</style>
	</head>
	<body>
		<div id="main">
			<h1>Submit X-Ray and Diagnoses</h1>
			<form action="/upload" method="post" enctype="multipart/form-data">
				<input type="file" name="pic" accept="image/*"></br>
				<input type="hidden" name="email" value="<%=email%>"></br>
				<textarea name="doctor" placeholder="Diagnosis"></textarea>
				<input id="submit" type="submit">
			</form>
			<b>Previous Diagnoses:</b></br>
			<% for(var i=0; i<searchResults.length; i++) {%>
				<i>http://localhost:3000/results?key=<%= searchResults[i].key %></i></br>
			<% } %>
			<img id="loadingCircle" style="display:none" src="/images/load.gif" width="60px"></img>
		</div>
		<script>
			$(function(){
				$("#submit").click(function(){
					$("#submit").hide();
					$("#loadingCircle").show();
				});
			});
		</script>
	</body>
</html>